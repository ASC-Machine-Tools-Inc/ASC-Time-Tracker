@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex align-items-center px-md-5 py-md-3">
    <div class="container">
        <div class="card login-card">
            <div class="row no-gutters">
                <div class="col-lg-5 d-none d-md-block">
                    <img src="~/img/login_bg.jpg" alt="login" class="login-card-img">
                </div>
                <div class="col-lg-7">
                    <div class="card-body">
                        <div class="brand-wrapper">
                            <i class="far fa-clock"></i>
                            <h1>ASC Time Tracker</h1>
                        </div>
                        <p class="login-card-description">Sign into your account</p>

                        <form id="account" method="post">
                            <div class="col-12 col-md-6">
                                <div asp-validation-summary="All" class="text-danger"></div>

                                <div class="mb-2">
                                    <label asp-for="Input.Email" class="form-label"></label>
                                    <div class="row m-auto">
                                        <input asp-for="Input.Email" class="form-control mb-2"
                                               placeholder="yourname@ascmt.com" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-2">
                                    <label asp-for="Input.Password" class="form-label"></label>
                                    <div class="row m-auto">
                                        <input asp-for="Input.Password" class="form-control mb-2"
                                               placeholder="***********" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="checkbox">
                                        <label asp-for="Input.RememberMe">
                                            <input asp-for="Input.RememberMe" />
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                </div>
                                @Html.ValidationMessage("LoginError", "", new { @class = "text-danger" })
                                <input name="login" id="loginButton" class="btn login-btn mb-4" type="submit" value="Login">
                            </div>

                            <div class="account-options">
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Update notification alert -->
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <strong>Update, 9/20/2021 (v1.1.0):</strong> Time tracker site redesigned, now supporting multiple timers.
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            <hr />
            <ul class="m-0">
                <li>
                    Features:
                    <ul>
                        <li>
                            Users can now start multiple independent timers.
                        </li>
                        <li>
                            A cleaner new design for the site to support the new timers.
                        </li>
                        <li>
                            More account functions added, along with a new site tour.
                        </li>
                    </ul>
                </li>
                <li>
                    Various bug fixes.
                </li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}