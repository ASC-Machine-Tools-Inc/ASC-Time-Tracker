@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li>
        <span class="dropdown-item disabled">@User.Identity.Name</span>
    </li>
    <li>
        <hr class="dropdown-divider">
    </li>
    <li>
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("MainIndex", "TimeLog", new { area = "" })">
            <button id="logoutButton" type="submit" class="dropdown-item">Logout</button>
        </form>
    </li>
}
else
{
    <li class="dropdown-item">
        <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="dropdown-item">
        <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}