@using Microsoft.AspNetCore.Identity
@using Asc_Time_Tracker.Areas.Identity.Models
@inject SignInManager<TimeTrackerUser> SignInManager
@inject UserManager<TimeTrackerUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li>
        <span class="dropdown-item disabled">@User.Identity.Name</span>
    </li>
    <li>
        <hr class="dropdown-divider">
    </li>
    <a id="changePasswordDropdownItem"
       class="dropdown-item"
       asp-area="Identity"
       asp-page="/Account/Manage/ChangePassword">
        Change Password
    </a>
    <li>
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
              asp-route-returnUrl="@Url.Action("MainIndex", "TimeLog", new { area = "" })">
            <button id="logoutButton" type="submit" class="dropdown-item">
                Logout
            </button>
        </form>
    </li>
}
else
{
    <li class="dropdown-item">
        <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="dropdown-item">
        <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}