@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div>
    <h1 class="display-4">Hi, Test!</h1>
    <h4 id="time">@DateTime.Now</h4>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <strong id="jobStatus">No log currently active</strong>
                    <h2 id="jobTime">00:00:00</h2>
                    <div class="row justify-content-center">
                        <button id="startBtn" type="button" class="btn btn-primary" onclick="jobTimer.start()">Start</button>
                        <button id="stopBtn" type="button" class="btn btn-primary mx-1" onclick="jobTimer.stop()" style="display:none;">Stop</button>
                        <button id="resetBtn" type="button" class="btn btn-primary mx-1" onclick="jobTimer.reset()" style="display:none;">Reset</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                Test
            </div>
            <div class="card">
                Test
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/currTime.js"></script>
    <script src="~/js/timer.js"></script>
}