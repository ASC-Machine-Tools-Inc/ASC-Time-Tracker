@model Asc_Time_Tracker.Pages.TimeLogs._CreateModel

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add a new time log</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="timeLogForm" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TimeLog.EMPID" class="control-label"></label>
                        <input asp-for="TimeLog.EMPID" class="form-control" />
                        <span asp-validation-for="TimeLog.EMPID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TimeLog.JOBNUM" class="control-label"></label>
                        <input asp-for="TimeLog.JOBNUM" class="form-control" />
                        <span asp-validation-for="TimeLog.JOBNUM" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TimeLog.DATE" class="control-label"></label>
                        <input asp-for="TimeLog.DATE" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="TimeLog.DATE" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TimeLog.TIME" class="control-label"></label>
                        <input asp-for="TimeLog.TIME" class="form-control" />
                        <span asp-validation-for="TimeLog.TIME" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TimeLog.NOTES" class="control-label"></label>
                        <input asp-for="TimeLog.NOTES" class="form-control" />
                        <span asp-validation-for="TimeLog.NOTES" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input asp-for="TimeLog.RD" class="form-check-input" type="checkbox" />
                            <label asp-for="TimeLog.RD" class="form-check-label">Research and Development tax credit eligible</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" value="Create" form="timeLogForm" class="btn btn-primary">Add</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}